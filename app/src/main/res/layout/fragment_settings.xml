<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_seconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/settings_hint_seconds"
        android:inputType="number" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_apply_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="applyInterval"
        android:text="Apply Interval" />

    <Switch
        android:id="@+id/switch_auto_change_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatically change wallpaper"
        android:layout_marginTop="16dp"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/editText_seconds" />





</LinearLayout>
