<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/splash1" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/splash1"
                android:endColor="@color/splash2"
                android:type="linear"
                android:angle="0" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Drop shadow -->
    <item android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">

            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>